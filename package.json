{
  "name": "typescript-library-template-didor",
  "version": "0.5.21",
  "description": "A simple and professional template for developing and maintaining TypeScript libraries with modern tools, automated releases, and best practices.",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "check-exports": "attw --pack .",
    "prepare": "husky",
    "release": "release-it --only-version",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint --fix"
    ],
    "**/*": "prettier -w --ignore-unknown"
  },
  "keywords": [
    "typescript",
    "tsup",
    "prettier",
    "eslint",
    "vitest",
    "husky",
    "lint-staged",
    "commit-lint",
    "release-it",
    "github-actions",
    "dependabot",
    "vitepress",
    "ci-cd",
    "boilerplate",
    "starter",
    "library-template",
    "open-source"
  ],
  "license": "MIT",
  "homepage": "https://github.com/fvena/typescript-library-template.git",
  "bugs": {
    "url": "https://github.com/fvena/typescript-library-template.git/issues"
  },
  "author": "Francisco Vena <fvena32@gmail.com> (https://www.fvena.com)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fvena/typescript-library-template.git.git"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.0",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.16.0",
    "@release-it/conventional-changelog": "^9.0.3",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-n": "^17.14.0",
    "eslint-plugin-perfectionist": "^4.2.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "release-it": "^17.10.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0",
    "vitepress": "^1.5.0",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=22.11.0"
  }
}
